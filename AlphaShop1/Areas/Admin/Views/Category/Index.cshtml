@model IEnumerable<AlphaShop1.Models.CategoryModel>

@{
	ViewData["Title"] = "Category";
}

<div class="custom-container">
	<div class="row">
		<div class="col-6">
			<h3>List Categories</h3>
		</div>
		<div class="col-6 text-right">
			<a asp-action="Create" asp-controller="Category" class="btn btn-primary"><i class="fa-solid fa-plus"></i><strong> Add Category</strong></a>
		</div>
	</div>

	<br />
	<table class="table table-light table-borderless table-hover text-center mb-0">
		<thead class="thead-dark">
			<tr>
				<th>#</th>
				<th>Name</th>
				<th>Description</th>
				<th>Slug</th>
				<th>Status</th>
				<th></th>
			</tr>
		</thead>
		<tbody class="align-middle">
			@foreach (var item in Model)
			{
				<tr>
					<td class="align-middle">@item.Id</td>
					<td class="align-middle">@item.Name</td>
					<td class="align-middle">@item.Description</td>
					<td class="align-middle">@item.Slug</td>

					@if (item.Status == 1)
					{
						<td class="align-middle">Hiển thị</td>
					}
					else
					{
						<td class="align-middle">Ẩn</td>
					}

					<td class="align-middle">
						<a asp-action="Edit" asp-controller="Category" asp-route-Id="@item.Id" class="btn btn-sm btn-primary"><i class="fa-solid fa-pencil"></i></a>
						<a asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id" class="btn btn-sm btn-danger ml-1"><i class="fa-solid fa-x"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

<style>
	.custom-container {
		max-width: 90%;
		margin: 50px auto;
	}
</style>