@model IEnumerable<AlphaShop1.Models.ProductModel>

@{
	ViewData["Title"] = "Product";
	Paginate pager = new Paginate();
	int pageNo = 0;
	if (ViewBag.Pager != null)
	{
		pager = ViewBag.Pager;
		pageNo = pager.CurrentPage;
	}
}

<div class="custom-container">
	<div class="row">
		<div class="col-6">
			<h3>List Products</h3>
		</div>
		<div class="col-6 text-right">
			<a asp-action="Create" asp-controller="Product" class="btn btn-primary"><i class="fa-solid fa-plus"></i><strong> Add Product</strong></a>
		</div>
	</div>

	<br />
	<table class="table table-light table-borderless table-hover text-center mb-0">
		<thead class="thead-dark">
			<tr>
				<th>#</th>
				<th>Name</th>
				<th>Description</th>
				<th>Price</th>
				<th>Image</th>
				<th>Slug</th>
				<th>Category</th>
				<th>Brand</th>
				<th></th>
			</tr>
		</thead>
		<tbody class="align-middle">
			@foreach (var item in Model)
			{
				<tr>
					<td class="align-middle">@item.Id</td>
					<td class="align-middle">@item.Name</td>
					<td class="align-middle">@item.Description</td>
					<td class="align-middle">@item.Price</td>
					<td class="align-middle"><img src="~/media/products/@item.Image" width="80" /> </td>
					<td class="align-middle">@item.Slug</td>
					<td class="align-middle">@item.Category.Name</td>
					<td class="align-middle">@item.Brand.Name</td>
					<td class="align-middle">
						<a asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id" class="btn btn-sm btn-primary"><i class="fa-solid fa-pencil"></i></a>
						<a asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id" class="btn btn-sm btn-danger ml-1"><i class="fa-solid fa-x"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<partial name="_PVPhanTrang" model="@pager" />
</div>

<style>
	.custom-container {
		max-width: 90%;
		margin: 50px auto;
	}
</style>