@model IEnumerable<AlphaShop1.Models.AppUserModel>

@{
	ViewData["Title"] = "User";
	Paginate pager = new Paginate();
	int pageNo = 0;
	if (ViewBag.Pager != null)
	{
		pager = ViewBag.Pager;
		pageNo = pager.CurrentPage;
	}
}

<div class="custom-container">
	<div class="row">
		<div class="col-6">
			<h3>List Users</h3>
		</div>
		<div class="col-6 text-right">
			<a asp-action="Create" asp-controller="User" class="btn btn-primary"><i class="fa-solid fa-plus"></i><strong> Create User</strong></a>
		</div>
	</div>

	<br />
	<table class="table table-light table-borderless table-hover text-center mb-0">
		<thead class="thead-dark">
			<tr>
				<th>Id</th>
				<th>User</th>
				<th>Email</th>
				<th>PasswordHash</th>
				<th>Phone</th>
				<th>Role</th>
				<th></th>
			</tr>
		</thead>
		<tbody class="align-middle">
			@foreach (var user in Model)
			{
				<tr>
					<td class="align-middle">@user.Id</td>
					<td class="align-middle">@user.UserName</td>
					<td class="align-middle">@user.Email</td>
					<td class="align-middle">@user.PhoneNumber</td>
					<td class="align-middle"></td>
					<td class="align-middle">
						<a asp-action="Edit" asp-controller="User" asp-route-Id="@user.Id" class="btn btn-sm btn-primary"><i class="fa-solid fa-pencil"></i></a>
						<a asp-action="Delete" asp-controller="User" asp-route-Id="@user.Id" class="btn btn-sm btn-danger ml-1"><i class="fa-solid fa-x"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<partial name="_PVPhanTrang" model="@pager" />
</div>

<style>
	.custom-container {
		max-width: 90%;
		margin: 50px auto;
	}
</style>