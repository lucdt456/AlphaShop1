@model AppUserModel

@{
	ViewData["Title"] = "Create User";
}

<div class="custom-container">
	<h3>Create User</h3>
	</br>
	<div class="col-md-9">
		<div asp-validation-summary="All"></div>
		<form asp-action="Create" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<label>UserName</label>
				<input asp-for="UserName" class="form-control" />
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label>Password</label>
				<input asp-for="PasswordHash" class="form-control"></input>
				<span asp-validation-for="PasswordHash	" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label>Email</label>
				<input asp-for="Email" class="form-control"></input>
				<span asp-validation-for="Email	" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label>Phone Number</label>
				<input asp-for="PhoneNumber" class="form-control"></input>
				<span asp-validation-for="PhoneNumber	" class="text-danger"></span>
			</div>

			@* <div class="form-group">
				<label>Category</label>
				<select asp-for="" class="form-control" asp-items="ViewBag.Roles">
					<option>--Choose a Role</option>
				</select>
				<span asp-validation-for="" class="text-danger"></span>
			</div> *@

			<div class="form-group">
				<button class="btn btn-primary">Create</button>
				<a class="btn btn-primary" asp-action="Index">Back to List User</a>
			</div>
		</form>

	</div>
</div>



<style>
	.custom-container {
		max-width: 90%;
		margin: 50px auto;
	}
</style>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
