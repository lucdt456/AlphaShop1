@model Paginate

<div class="col-12 mt-5">
	<nav>
		<ul class="pagination justify-content-center">
			@if (Model.CurrentPage > 0)
			{
				@if (Model.CurrentPage == 1)
				{
					<li class="page-item"><a class="page-link"><i class="fa-solid fa-backward"></i></a></li>
					<li class="page-item"><a class="page-link"><i class="fa-solid fa-caret-left"></i></a></li>
				}
				else
				{
					<li class="page-item"><a class="page-link" asp-action="Index" asp-route-pg="1"><i class="fa-solid fa-backward"></i></a></li>
					<li class="page-item"><a class="page-link" asp-action="Index" asp-route-pg="@(Model.CurrentPage-1)"><i class="fa-solid fa-caret-left"></i></a></li>
				}

				@for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
				{
					<li class="page-item @(pge==Model.CurrentPage ? "active" : "")"><a class="page-link" asp-action="index" asp-route-pg="@pge">@pge</a></li>
				}

				@if (Model.CurrentPage == Model.TotalPages)
				{
					<li class="page-item"><a class="page-link"><i class="fa-solid fa-caret-right"></i></a></li>
					<li class="page-item"><a class="page-link"><i class="fa-solid fa-forward"></i></a></li>
				}
				else
				{
					<li class="page-item"><a class="page-link" asp-action="Index" asp-route-pg="@(Model.CurrentPage+1)"><i class="fa-solid fa-caret-right"></i></a></li>
					<li class="page-item"><a class="page-link" asp-action="Index" asp-route-pg="@Model.TotalPages"><i class="fa-solid fa-forward"></i></a></li>
				}
			}
		</ul>
	</nav>
</div>